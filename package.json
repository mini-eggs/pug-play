{
  "name": "universal-javascript-boilerplate",
  "version": "1.2.0",
  "main": "dist/index.js",
  "author": "Evan M Jones <evanjones4040@gmail.com> (https://evansapps.com/)",
  "license": "MIT",
  "engines": {
    "node": "6.9.2",
    "npm": "3.10.9"
  },
  "dependencies": {
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-3": "^6.22.0",
    "background-image-fade-in": "^0.4.3",
    "compression-webpack-plugin": "^0.3.2",
    "concurrently": "^3.3.0",
    "contentful": "^3.8.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^2.0.0-beta",
    "node-emoji": "^1.5.1",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "prettier": "^0.17.1",
    "pug": "^2.0.0-beta11",
    "rxjs": "^5.1.0",
    "sass-loader": "^5.0.1",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.1"
  },
  "scripts": {
    "build": "npm run webpack-client-build && npm run webpack-server-build",
    "start": "node dist/",
    "dev": "concurrently --kill-others \"nodemon dist/\" \"npm run webpack-client-dev\" \"npm run webpack-server-dev\" ",
    "clean": "rm -rf dist",
    "prettier": "prettier --write './src/**/*.js' --single-quote",
    "webpack-client-dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch --config webpack.client.js",
    "webpack-client-build": "cross-env NODE_ENV=production webpack --progress --hide-modules --config webpack.client.js",
    "webpack-server-dev": "cross-env NODE_ENV=development webpack --progress --hide-modules --watch --config webpack.server.js",
    "webpack-server-build": "cross-env NODE_ENV=production webpack --progress --hide-modules --config webpack.server.js"
  }
}
